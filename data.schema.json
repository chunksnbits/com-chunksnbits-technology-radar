{
  "type": "object",
  "required": [
    "application",
    "technologyRadar",
    "$schema"
  ],
  "additionalProperties": false,
  "properties": {
    "$schema": "string",
    "application": {
      "type": "object",
      "required": [
        "title",
        "logo",
        "editor"
      ],
      "additionalProperties": false,
      "properties": {
        "title": {
          "type": "string"
        },
        "logo": {
          "type": "string"
        },
        "editor": {
          "type": "boolean"
        }
      }
    },
    "technologyRadar": {
      "type": "object",
      "required": [
        "settings",
        "levels",
        "groups",
        "technologies"
      ],
      "additionalProperties": false,
      "properties": {
        "settings": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "editable": {
              "type": "boolean"
            },
            "innerRadiusPercent": {
              "type": "number",
              "minimum": 0,
              "maximum": 50,
              "default": 10
            },
            "outerRadiusPercent": {
              "type": "number",
              "minimum": 0,
              "maximum": 50,
              "default": 50
            }
          }
        },
        "levels": {
          "type": "array",
          "uniqueItems": true,
          "items": {
            "type": "object",
            "required": [
              "id",
              "name"
            ],
            "properties": {
              "id": {
                "type": "string"
              },
              "name": {
                "type": "string"
              }
            }
          }
        },
        "groups": {
          "type": "array",
          "uniqueItems": true,
          "items": {
            "type": "object",
            "required": [
              "id",
              "name",
              "color"
            ],
            "properties": {
              "id": {
                "type": "string"
              },
              "name": {
                "type": "string"
              },
              "color": {
                "type": "string"
              }
            }
          }
        },
        "technologies": {
          "type": "array",
          "uniqueItems": true,
          "items": {
            "type": "object",
            "required": [
              "id",
              "name",
              "groupId",
              "level"
            ],
            "properties": {
              "id": {
                "type": "string"
              },
              "name": {
                "type": "string"
              },
              "level": {
                "type": "number"
              },
              "groupId": {
                "type": "string"
              },
              "logo": {
                "type": "string"
              },
              "website": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "href": {
                    "type": "string"
                  }
                }
              },
              "description": {
                "type": "string"
              }
            }
          }
        }
      }
    }
  }
}