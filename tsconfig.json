{
  "compilerOptions": {
    "outDir": "lib",
    "baseUrl": "src",
    "module": "esnext",
    "target": "es5",
    "lib": [
      "es2015",
      "es2016",
      "es2017",
      "dom"
    ],
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",
    "rootDir": "src",
    "paths": {
      "core/*": [
        "./*"
      ],
      "public/*": [
        "../private/*",
        "../public/*"
      ]
    },
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": false,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "experimentalDecorators": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "plugins": [
      {
        "name": "typescript-lit-html-plugin"
      }
    ]
  },
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest",
    "lib",
    "src/setupTests.ts",
    "coverage",
    "**/spec.tsx"
  ],
  "include": [
    "src",
    "public",
    "private"
  ]
}
