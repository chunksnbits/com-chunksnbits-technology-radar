{
  "compilerOptions": {
    "outDir": "build/dist",
    "baseUrl": "src",
    "module": "esnext",
    "target": "es5",
    "lib": [
      "es2015",
      "es2016",
      "es2017",
      "dom"
    ],
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",
    "rootDir": "src",
    "paths": {
      "public/*": [
        "../private/*",
        "../public/*"
      ],
      "mocks/*": [
        "../test/mocks/*"
      ],
      "mocks": [
        "../test/mocks/index.ts"
      ]
    },
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": false,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "experimentalDecorators": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true
  },
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest",
    "src/setupTests.ts",
    "coverage"
  ]
}
