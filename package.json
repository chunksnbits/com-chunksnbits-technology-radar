{
  "name": "technology-radar",
  "version": "0.3.2",
  "private": true,
  "homepage": "https://chunksnbits.github.io/technology-radar",
  "dependencies": {
    "@material-ui/core": "^1.0.0",
    "immer": "^1.3.0",
    "object-assign": "4.1.1",
    "promise": "8.0.1",
    "raf": "3.4.0",
    "react": "^16.3.2",
    "react-dom": "^16.3.2",
    "what-input": "^5.1.0",
    "whatwg-fetch": "2.0.4"
  },
  "scripts": {
    "start": "node scripts/start.js",
    "build": "node scripts/build.js --public-url /",
    "test": "node scripts/test.js --env=jsdom --watch",
    "serve": "serve -l 3001 -s build",
    "prerelease": "yarn build && yarn lint && node scripts/test.js --env=jsdom",
    "release": "standard-version",
    "predeploy": "rimraf dist && node scripts/build.js --dest dist && yarn snapshot",
    "deploy": "gh-pages -d dist",
    "commitlint": "commitlint -e $GIT_PARAMS",
    "lint": "tslint -p tsconfig.json && stylelint '**/*.scss'",
    "snapshot": "yarn react-snap"
  },
  "reactSnap": {
    "source": "dist"
  },
  "husky": {
    "hooks": {
      "commit-msg": "yarn commitlint",
      "pre-push": "yarn lint"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^7.0.0",
    "@commitlint/config-conventional": "^7.0.1",
    "@types/d3": "^5.0.0",
    "@types/enzyme": "^3.1.10",
    "@types/jest": "^23.1.0",
    "@types/node": "^10.0.6",
    "@types/react": "^16.3.14",
    "@types/react-dom": "^16.0.5",
    "@types/sinon": "^5.0.1",
    "@types/webpack": "^4.4.0",
    "address": "^1.0.3",
    "autoprefixer": "8.6.2",
    "babel-jest": "^23.0.1",
    "babel-loader": "^7.1.2",
    "babel-preset-react-app": "^3.1.1",
    "case-sensitive-paths-webpack-plugin": "2.1.1",
    "chalk": "2.4.1",
    "css-loader": "0.28.11",
    "dotenv": "6.0.0",
    "dotenv-expand": "4.2.0",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "git://github.com/School-Explained/enzyme-adapter-react-16.git",
    "extract-text-webpack-plugin": "3.0.2",
    "file-loader": "1.1.11",
    "fork-ts-checker-webpack-plugin": "^0.4.2",
    "fs-extra": "6.0.1",
    "gh-pages": "^1.2.0",
    "html-webpack-plugin": "2.29.0",
    "husky": "^1.0.0-rc.8",
    "jest": "23.1.0",
    "json-loader": "^0.5.7",
    "node-sass": "^4.9.0",
    "postcss-flexbugs-fixes": "3.3.1",
    "postcss-loader": "2.1.5",
    "qrcode-terminal": "^0.12.0",
    "react-dev-utils": "^5.0.1",
    "react-snap": "^1.12.2",
    "rimraf": "^2.6.2",
    "sass-loader": "^7.0.1",
    "serve": "^9.0.0",
    "sinon": "^6.0.0",
    "source-map-loader": "^0.2.1",
    "standard-version": "^4.4.0",
    "style-loader": "0.21.0",
    "stylelint": "^9.3.0",
    "stylelint-config-standard": "^18.2.0",
    "stylelint-selector-bem-pattern": "^2.0.0",
    "sw-precache-webpack-plugin": "0.11.5",
    "ts-jest": "22.4.6",
    "ts-loader": "^3.5.0",
    "tsconfig-paths-webpack-plugin": "^3.2.0",
    "tslint": "^5.10.0",
    "tslint-config-prettier": "^1.10.0",
    "tslint-react": "^3.2.0",
    "typescript": "^2.8.3",
    "typescript-lit-html-plugin": "^0.3.1",
    "uglifyjs-webpack-plugin": "^1.1.8",
    "url-loader": "1.0.1",
    "webpack": "3.8.1",
    "webpack-dev-server": "3.0.0",
    "webpack-manifest-plugin": "2.0.3",
    "why-did-you-update": "^0.1.1"
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}"
    ],
    "coveragePathIgnorePatterns": [
      "typings.d.ts"
    ],
    "setupFiles": [
      "<rootDir>/config/polyfills.js",
      "<rootDir>/config/jest/configureEnzyme.js"
    ],
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.(j|t)s?(x)",
      "<rootDir>/src/**/?(*.)(spec|test).(j|t)s?(x)"
    ],
    "testEnvironment": "node",
    "testURL": "http://localhost",
    "transform": {
      "^.+\\.(js|jsx|mjs)$": "<rootDir>/node_modules/babel-jest",
      "^.+\\.tsx?$": "<rootDir>/config/jest/typescriptTransform.js",
      "^.+\\.scss$": "<rootDir>/config/jest/cssTransform.js",
      "^(?!.*\\.(js|jsx|mjs|css|json)$)": "<rootDir>/config/jest/fileTransform.js"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx|mjs|ts|tsx)$"
    ],
    "modulePaths": [
      "src",
      "test",
      "node_modules",
      ""
    ],
    "moduleNameMapper": {
      "^react-native$": "react-native-web"
    },
    "moduleFileExtensions": [
      "web.ts",
      "ts",
      "web.tsx",
      "tsx",
      "web.js",
      "js",
      "web.jsx",
      "jsx",
      "json",
      "node",
      "mjs"
    ],
    "globals": {
      "ts-jest": {
        "tsConfigFile": "./tsconfig.test.json"
      }
    }
  },
  "babel": {
    "presets": [
      "react-app"
    ]
  },
  "eslintConfig": {
    "extends": "react-app"
  }
}
